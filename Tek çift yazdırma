#include  <stdio.h>
#include <stdlib.h>
#include <string.h>
int tekcit(int dizi[],int n){
    int a;
    for (int i = 0; i < n; ++i) {
        printf("\n");
        if(dizi[i]%2==0){
            printf("Ã‡itfler:");
            printf("%d", dizi[i]);
        }

        else{
            printf("Tekler:");
            printf("%d", dizi[i]);
        }

    }
}

int main() {

    int sayi;
    int basamak = 0;
    int z,i,k;
    int x;
    int tut[99];
    printf("Sayi giriniz: ");
    scanf("%d", &sayi);
    x=sayi;
    while (x > 0) {
        x=x / 10;
        basamak++;
    }

    //printf("%d",basamak);
    for (int i = 0; i <basamak ; i++) {

        k=sayi%10;
        tut[i]=k;
        sayi=sayi/10;


    }
    for (int z = 0; z <basamak ;z++) {
        printf("%ld,",tut[z]);

    }
    tekcit(tut,basamak);

}


