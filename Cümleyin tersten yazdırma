#include <stdio.h>
#include <string.h>
#include <stdlib.h>




int main()
{
    char *p;
    char dizi[256];
    int i, j, uzunluk, ilk, sonindeks;

    printf("\n Cumleyi giriniz  :  ");
    gets(dizi);
    uzunluk = strlen(dizi);
    sonindeks = uzunluk - 1;
    p=(char *)malloc(uzunluk*sizeof(char));
    p=dizi;



    printf("\n Tersten yazdÄ±rma :\n");
    for(i = uzunluk - 1; i >= 0; i--)
    {
        if(p[i] == ' ' || i == 0)
        {
            if(i == 0)
            {
                ilk = 0;
            }
            else
            {
                ilk = i + 1;

            }
            for(j = ilk; j <= sonindeks; j++)
            {
                printf("%c", *(p+j));
            }
            sonindeks = i - 1;
            printf(" ");
        }

    }

    return 0;
}
